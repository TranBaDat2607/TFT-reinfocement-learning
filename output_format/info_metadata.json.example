{
  "_comment": "Info dictionary returned in env.step() for each agent",
  "_description": "Metadata for debugging, logging, and analysis (not used for training)",

  "purpose": "Provide additional context that doesn't go into observations but is useful for monitoring",

  "standard_fields": {
    "_description": "Fields present in every info dict",

    "hp": {
      "type": "int",
      "range": [0, 100],
      "description": "Current health points",
      "example": 75
    },

    "gold": {
      "type": "int",
      "range": [0, 999],
      "description": "Current gold amount",
      "example": 42
    },

    "level": {
      "type": "int",
      "range": [1, 11],
      "description": "Current player level",
      "example": 6
    },

    "xp": {
      "type": "int",
      "range": [0, 136],
      "description": "Current experience points",
      "example": 22
    },

    "placement": {
      "type": "int",
      "range": [1, 8],
      "description": "Current placement rank (1=best, 8=worst)",
      "example": 3
    },

    "is_alive": {
      "type": "bool",
      "description": "Whether player is still in the game",
      "example": true
    },

    "rounds_survived": {
      "type": "int",
      "range": [1, 48],
      "description": "Number of rounds player has survived",
      "example": 15
    },

    "action_was_valid": {
      "type": "bool",
      "description": "Whether the action executed successfully",
      "example": true
    }
  },

  "combat_fields": {
    "_description": "Fields related to combat outcomes",

    "combat_result": {
      "type": "str",
      "options": ["won", "lost", "draw", "no_combat"],
      "description": "Outcome of most recent combat",
      "example": "won"
    },

    "damage_dealt": {
      "type": "int",
      "range": [0, 100],
      "description": "Damage dealt to opponent this round",
      "example": 8
    },

    "damage_taken": {
      "type": "int",
      "range": [0, 100],
      "description": "Damage received from opponent this round",
      "example": 0
    },

    "total_damage_dealt": {
      "type": "int",
      "range": [0, 999],
      "description": "Cumulative damage dealt across all rounds",
      "example": 145
    },

    "total_damage_taken": {
      "type": "int",
      "range": [0, 100],
      "description": "Cumulative damage received across all rounds",
      "example": 25
    },

    "opponent_faced": {
      "type": "int",
      "range": [0, 7],
      "description": "Which opponent player faced this round (or -1 for minions)",
      "example": 2
    },

    "win_streak": {
      "type": "int",
      "range": [0, 10],
      "description": "Current consecutive wins",
      "example": 3
    },

    "loss_streak": {
      "type": "int",
      "range": [0, 10],
      "description": "Current consecutive losses",
      "example": 0
    }
  },

  "board_fields": {
    "_description": "Fields related to board and units",

    "board_strength": {
      "type": "float",
      "description": "Estimated total board strength (sum of unit values)",
      "example": 850.5
    },

    "units_count": {
      "type": "int",
      "range": [0, 11],
      "description": "Number of units on board",
      "example": 6
    },

    "bench_count": {
      "type": "int",
      "range": [0, 9],
      "description": "Number of units on bench",
      "example": 3
    },

    "active_traits": {
      "type": "list[str]",
      "description": "List of active trait names",
      "example": ["Sentinel", "Deadeye", "Sorcerer"]
    },

    "active_trait_count": {
      "type": "int",
      "description": "Number of active traits",
      "example": 3
    },

    "three_star_units": {
      "type": "int",
      "description": "Number of 3-star units on board",
      "example": 0
    },

    "total_items": {
      "type": "int",
      "description": "Total items equipped on all units",
      "example": 8
    }
  },

  "economy_fields": {
    "_description": "Fields related to gold and economy",

    "gold_spent_this_round": {
      "type": "int",
      "description": "Gold spent in current planning phase",
      "example": 12
    },

    "total_gold_spent": {
      "type": "int",
      "description": "Cumulative gold spent across game",
      "example": 156
    },

    "interest_earned": {
      "type": "int",
      "description": "Interest earned this round",
      "example": 4
    },

    "rerolls_this_round": {
      "type": "int",
      "description": "Number of shop refreshes this round",
      "example": 2
    },

    "units_bought_this_round": {
      "type": "int",
      "description": "Number of champions purchased this round",
      "example": 3
    },

    "units_sold_this_round": {
      "type": "int",
      "description": "Number of champions sold this round",
      "example": 1
    }
  },

  "termination_fields": {
    "_description": "Fields present only when is_alive=False (player eliminated)",

    "elimination_round": {
      "type": "int",
      "description": "Round number when player was eliminated",
      "example": 23
    },

    "final_placement": {
      "type": "int",
      "range": [1, 8],
      "description": "Final placement in the game",
      "example": 5
    },

    "is_top4": {
      "type": "bool",
      "description": "Whether player finished in top 4",
      "example": false
    },

    "won_game": {
      "type": "bool",
      "description": "Whether player won (1st place)",
      "example": false
    },

    "final_board_value": {
      "type": "float",
      "description": "Board strength at elimination",
      "example": 1250.0
    },

    "cause_of_death": {
      "type": "str",
      "options": ["combat_loss", "timeout", "surrender"],
      "description": "How player was eliminated",
      "example": "combat_loss"
    }
  },

