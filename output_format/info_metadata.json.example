  "usage_notes": {
    "for_training": "Info dict is NOT used as input to the neural network",
    "for_logging": "Use info fields to track training metrics (avg placement, top-4 rate, etc.)",
    "for_debugging": "Check action_was_valid, combat_result, etc. when debugging policy",
    "for_analysis": "Aggregate stats across episodes to understand agent behavior",

    "recommended_metrics_to_log": [
      "Average placement per 100 games",
      "Top-4 rate (%)",
      "Win rate (%)",
      "Average rounds survived",
      "Average total damage dealt",
      "Average gold spent per game",
      "Most common active traits"
    ]
  },

  "optional_fields": {
    "_description": "Additional fields that can be added for specific analysis",

    "suggested_additions": {
      "comp_archetype": "str (e.g., 'Reroll Sentinels', 'Fast 8 Innovators')",
      "key_units": "list[str] (main carry champions)",
      "pivot_round": "int (round when comp was pivoted)",
      "eco_strategy": "str ('winstreak', 'lossstreak', 'stable')",
      "hit_key_units": "bool (did we find our carries?)",
      "contested_comp": "bool (are 2+ players playing same comp?)"
    }
  }
}
